# ========================================
# SERVER ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and update values

# Node Environment
NODE_ENV=development

# ========== SERVER ==========
# Port to run the server on
PORT=5000

# ========== DATABASE ==========
# Docker Compose database variables (used by server/docker-compose.yml)
# These are only needed if you run Postgres via Docker Compose.
DB_NAME=claimpoint_db
DB_USER=postgres
DB_PASSWORD=something_secure
DB_PORT=5432

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:something_secure@localhost:5432/claimpoint_db

# ========== JWT AUTHENTICATION ==========
# Secret key for JWT token signing
# Use a long, random string in production
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ========== EMAIL CONFIGURATION ==========
# SMTP server details for sending emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
EMAIL_FROM="ClaimPoint <noreply@claimpoint.com>"

# ========== CLOUDINARY CONFIGURATION ==========
# For image uploads
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ========== ADMIN CREDENTIALS ==========
# Used when seeding the database with initial admin
ADMIN_EMAIL=admin@claimpoint.com
ADMIN_PASSWORD=something_secure
ADMIN_FULLNAME=Admin User
ADMIN_PHONE=+8809611222333

# ========== STAFF DEFAULT PASSWORD ==========
# Default password for newly created staff members
STAFF_DEFAULT_PASSWORD=DefaultPassword123
